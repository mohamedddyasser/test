<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="account_move_view_inherited_form" model="ir.ui.view">
            <field name="name">account_move_view_inherited_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='delivery_date']" position="after">
                    <field name="job" invisible="move_type != 'out_invoice'"/>
                    <field name="analytic_account_id" invisible="move_type != 'out_invoice'"
                           options="{'no_quick_create': True, 'no_create_edit': True, 'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="number_ref" required="0" invisible="move_type != 'in_invoice'"/>
                    <field name="check_invoice_info_duplicate" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="after">
                    <field name="claim_percentage" column_invisible="1"/>
                </xpath>
                <xpath expr="//header" position="after">
                    <div>
                        <div class="alert alert-danger"
                             invisible="not check_invoice_info_duplicate"
                             role="alert"
                             style="margin-bottom:0px;">
                            <p>
                                <i class="fa fa-thumbs-down"/>
                                Warning for Bill:
                                <b>This is duplicate invoice.</b>
                                .
                            </p>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//sheet/group/group[@id='header_left_group']/field[@name='partner_shipping_id']" position="after">
                    <xpath expr="//notebook//field[@name='partner_bank_id']" position="move"/>
                </xpath>
            </field>
        </record>

        <record id="view_invoice_tree_inherited" model="ir.ui.view">
            <field name="name">account.invoice.tree.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="number_ref" optional="show" column_invisible="context.get('default_move_type') != 'in_invoice'"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>