<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_batch_payment_form_redirect_payment" model="ir.ui.view">
        <field name="name">account.batch.payment.form.payment_redirect</field>
        <field name="model">account.batch.payment</field>
        <field name="inherit_id" ref="account_batch_payment.view_batch_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_ids']/tree" position="inside">
                <field name="reconciled_invoices_type" column_invisible="1"/>
                <field name="reconciled_bills_count" column_invisible="1"/>
                <field name="reconciled_invoices_count" column_invisible="1"/>
                <button name="button_open_invoices" string="View Invoice" type="object" class="oe_stat_button" icon="fa-bars"
                        invisible="reconciled_invoices_count == 0" column_invisible="parent.state not in ['draft','under_approval']">
                </button>

                <!-- Bill stat button -->
                <button name="button_open_bills" string="View Bill" type="object" class="oe_stat_button" icon="fa-bars"
                        invisible="reconciled_bills_count == 0" column_invisible="parent.state not in ['draft','under_approval']">
                </button>
            </xpath>
        </field>
    </record>
</odoo>